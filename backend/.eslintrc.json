{
	"extends": [
		"airbnb",
		"plugin:prettier/recommended"
	],
	"plugins": ["prettier"],
	"env": {
		"es6": true,
		"jest": true,
		"node": true
	  },
	"rules": {
		"no-underscore-dangle": ["error", { "allow": ["_id", "__v"] }],
		"prettier/prettier": ["error", {
			"endOfLine":"auto",
			"singleQuote": true,
			"useTabs": true,
			"tabWidth": 4,
			"trailingComma": "none",
			"printWidth": 80
		}],
		"no-console": 0
	}
}